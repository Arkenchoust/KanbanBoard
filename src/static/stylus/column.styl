.kb-Board-colonneList
  display flex
  margin 1em 0 0

.colonne
  background #e2e4e6
  border-radius 3px
  flex-direction column
  width 17em
  margin 0 1em 0 0
  position relative

.kb-column-titre
  padding .5em 2.2em .5em .6em
  font-size .95em
  min-height 1.3em
  overflow hidden
  text-overflow ellipsis
  word-wrap break-word
  color #444
  font-weight bold

.kb-buttonAddColumn
  padding 0.5em 1.5em
  background rgba(0,0,0,0.15)
  border-radius 0.3em
  color white
  font-weight bold
  border 0
  &:hover
    background-color darkgreen

.kb-button-removeColumn
  position absolute
  background-color transparent
  top 0
  right 0
  border 0

.kb-button-addTicket
  padding 0.5em 0.5em
  font-size 0.95em
  color grey
  &:hover
    text-decoration underline
    background rgba(0,0,0,0.15)
    cursor pointer

.kb-column-ticket
  position relative
  padding 0.5em 0.5em
  border-bottom 1px solid #ccc
  border-radius 0.3em
  background white
  margin 0 0.5em 0.5em
  &:hover
    background rgba(0,0,0,0.02)
    cursor pointer
    .kb-column-edit
      display block

.kb-column-decos
  margin 0 0 0.4em

.kb-column-deco
  display inline-block
  border-radius 0.25em
  width 2em
  height .5em

.kb-column-deco--orange
  background ORANGE

.kb-column-deco--pink
  background PINK

.kb-column-deco--violet
  background VIOLET

.kb-column-deco--rouge
  background RED

.kb-column-deco--blue
  background BLUE

.kb-column-deco--cyan
  background CYAN

.kb-column-edit
  position absolute
  top 0.5em
  right 0.5em
  display none


